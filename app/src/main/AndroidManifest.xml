<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        package="com.lengjiye.code">

    <application
            android:name="com.lengjiye.code.application.CodeApplication"
            android:allowBackup="true"
            android:icon="@mipmap/logo"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/logo"
            android:supportsRtl="true"
            android:theme="@style/AppTheme"
            tools:ignore="GoogleAppIndexingWarning">
        <activity
                android:name="com.lengjiye.code.main.activity.MainActivity"
                android:configChanges="keyboard|screenSize|orientation"
                android:launchMode="singleTask">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
                android:name=".webview.WebViewActivity"
                android:configChanges="keyboard|screenSize|orientation"
                android:launchMode="singleTop" />

        <activity
                android:name=".login.activity.LoginActivity"
                android:configChanges="keyboard|screenSize|orientation"
                android:launchMode="singleTop"
                android:windowSoftInputMode="stateAlwaysHidden|stateHidden" />

        <activity
                android:name=".me.activity.RankTableActivity"
                android:configChanges="keyboard|screenSize|orientation"
                android:launchMode="singleTop" />

        <activity
                android:name=".me.activity.CoinListActivity"
                android:configChanges="keyboard|screenSize|orientation"
                android:launchMode="singleTop" />

        <activity
                android:name=".me.activity.MyCollectActivity"
                android:configChanges="keyboard|screenSize|orientation"
                android:launchMode="singleTop" />

        <activity
                android:name=".me.activity.CollectArticleListActivity"
                android:configChanges="keyboard|screenSize|orientation"
                android:launchMode="singleTop" />

        <activity
                android:name=".me.activity.CollectWebsiteListActivity"
                android:configChanges="keyboard|screenSize|orientation"
                android:launchMode="singleTop" />

        <activity
                android:name=".me.activity.SettingActivity"
                android:configChanges="keyboard|screenSize|orientation"
                android:launchMode="singleTop" />

    </application>

</manifest>