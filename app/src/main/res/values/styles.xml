<resources>

    <!-- Base applicationContext theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/c_008577</item>
        <item name="colorPrimaryDark">@color/c_00574b</item>
        <item name="colorAccent">@color/c_d81b60</item>
    </style>

    <style name="toolBar">
        <item name="colorControlNormal">#ffffff</item>
        <item name="android:homeAsUpIndicator">@mipmap/cha</item>
        <item name="android:titleTextStyle">@dimen/d_12</item>

    </style>

    <style name="first_tab_text_style">
        <item name="android:textSize">@dimen/d_15</item>
    </style>

    <style name="second_tab_text_style">
        <item name="android:textSize">@dimen/d_12</item>
    </style>

    <style name="common_dialog_style" parent="@android:style/Theme.Dialog">
        <!-- 无边框设置 -->
        <item name="android:windowFrame">@null</item>
        <!-- 是否浮现在activity之上 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 是否半透明 -->
        <item name="android:windowIsTranslucent">false</item>
        <!-- 是否没有标题 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 背景 -->
        <item name="android:windowBackground">@color/c_1a</item>
        <!-- 是否背景模糊 -->
        <item name="android:backgroundDimEnabled">true</item>
        <!--dialog遮罩透明度-->
        <item name="android:backgroundDimAmount">0.5</item>
    </style>


</resources>
